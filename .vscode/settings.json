{
    // These settings tweaks to the cmake plugin will ensure
    // that you debug using cortex-debug instead of trying to launch
    // a Pico binary on the host
    "cmake.statusbar.advanced": {
        "debug": {
            "visibility": "hidden"
        },
        "launch": {
            "visibility": "hidden"
        },
        "build": {
            "visibility": "hidden"
        },
        "buildTarget": {
            "visibility": "hidden"
        }
    },
    "cmake.buildBeforeRun": true,
    "files.associations": {
        "stdlib.h": "c",
        "gpio.h": "c",
        "phasecontrol.h": "c",
        "malloc.h": "c",
        "memory.h": "c",
        "string.h": "c",
        "status_ids.h": "c",
        "i2c.h": "c",
        "solenoid.h": "c",
        "stdio.h": "c",
        "uart_bridge.h": "c",
        "binary_input.h": "c",
        "pinout.h": "c"
    },
}